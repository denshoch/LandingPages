    include ./partials/fb-root.jade

    header#header
      h1.sr-only {Title}
      #header-inner
        .container
          .rows
            | 
            | {block:IfHeaderColumnLayoutReverse}
            #catchphrase-container.col-sm-push-5.col-sm-7.text-right
              | 
              | {/block:IfHeaderColumnLayoutReverse}
              | {block:IfNotHeaderColumnLayoutReverse}
              #catchphrase-container.col-sm-7
                | 
                | {/block:IfNotHeaderColumnLayoutReverse}
                #catchphrase-container-inner
                  p.catchphrase
                    | 
                    | {text:Catchphrase Main}
                  p.subphrase.hidden-xs
                    | 
                    | {text:Catchphrase Sub}
                  hr
                  .hidden-xs
                    | 
                    | {block:IfBookCollectionTitle}
                    p.book-collection-title
                      span.book-collection-title-label {text:BookCollectionTitle}
                    | 
                    | {/block:IfBookCollectionTitle}
                    p.book-title
                      | 
                      | {text:BookTitle}
                    | 
                    | {block:IfBookSubtitle}
                    p.book-subtitle
                      | 
                      | {text:BookSubtitle}
                    | 
                    | {/block:IfBookSubtitle}
                    ul.list-inline.creators-list
                      | 
                      | {block:IfAuthorName01}
                      li {text:AuthorName 01}
                      | 
                      | {/block:IfAuthorName01}
                      | {block:IfAuthorName02}
                      li {text:AuthorName 02}
                      | 
                      | {/block:IfAuthorName02}
                      | {block:IfContributorName01}
                      li {text:ContributorName 01}
                      | 
                      | {/block:IfContributorName01}
